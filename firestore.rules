rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Uživatelé mohou císt a menit pouze svá vlastní data
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Lekce mohou císt všichni prihlášení uživatelé
    // Zapisovat mohou pouze profesori
    match /lessons/{lessonId} {
       allow read: if request.auth != null;
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professor';
    }

    // Pravidla pro gamifikaci
    match /userPoints/{userId} {
        allow read: if request.auth.uid == userId;
        allow write: if false; // Zapisuje pouze backend (Cloud Function)
    }
  }
}
